import java.util.Scanner;

System.out.print("Введите отрезок: ");
        double a = sc.nextDouble(), b = sc.nextDouble();
        System.out.print("Введите шаг: ");
        double h = sc.nextDouble();
        for (double i = a; i <= b; i += h) {
            if (i > 2) {
                System.out.print(i + " ");
            } else System.out.print(-i + " ");
        }
        sc.close();
